# save_model.py
from sklearn.linear_model import LogisticRegression
import pickle
import os
import numpy as np

# Contoh data dummy buat bikin model (ganti dengan data preprocess beneran)
X = np.array([[0, 1], [1, 0], [1, 1], [0, 0]])
y = np.array([1, 1, 0, 0])

# Train model
model = LogisticRegression(max_iter=1000, random_state=42)
model.fit(X, y)

# Save model
os.makedirs("models", exist_ok=True)
with open("models/model.pkl", "wb") as f:
    pickle.dump(model, f)

print("âœ… Dummy model berhasil disimpan ke models/model.pkl")
